generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
  id     Int     @id @default(autoincrement())
  orders Order[]
}

model Order {
  id        Int         @id @default(autoincrement())
  tableId   Int
  status    Status
  createdAt DateTime    @default(now())
  items     OrderItem[]
  table     Table       @relation(fields: [tableId], references: [id])
}

model MenuItem {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  alergens    String[]
  price       Float
  attachments Attachment[]
  category    Category
  orderItems  OrderItem[]
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  orderId    Int
  menuItemId Int
  quantity   Int
  order      Order    @relation(fields: [orderId], references: [id])
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
}

model Attachment {
  id         Int      @id @default(autoincrement())
  menuItemId Int
  fileName   String
  fileType   FileType
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
}

enum Status {
  PLACED
  IN_PROGRESS
  DELIVERED
}

enum Category {
  BREAKFAST
  LUNCH
  DESSERT
  DRINKS
  ADDITIONALS
}

enum FileType {
  IMAGE
  VIDEO
}
